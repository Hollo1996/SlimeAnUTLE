marksTemp, MT_	  :List: Temp := [|$;@;"
markModesTemp, MMT :List:Temp := [|SLSP;SLSP;TEXT
=}


[= LL :List:Temp 		:= [+ L.fromM 		 :+ [=:List:Temp := [|O;T
