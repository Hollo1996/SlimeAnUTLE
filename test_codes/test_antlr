[+ LLOL.iter.iter.asB  	:+ [=:Iter:Temp := [|BOB;OLB;COB
[+ LLTL.iter.iter.asB  	:+ [=:Iter:Temp := [|BOB;OLB;COB
							
[= 	LBLL :List:List:Temp 	:= [+ LBL.iter.typeM :+ MT
